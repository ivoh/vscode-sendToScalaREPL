{
    "name": "sendtoscalarepl",
    "displayName": "SendToScalaREPL",
    "description": "Sends selected text to Scala console with support of :paste mode when the text is multiline.",
    "version": "0.0.1",
    "publisher": "ivoh",
    "engines": {
         "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "terminal", "scala", "repl", "console"
    ],
    "activationEvents": [
        "onCommand:extension.sendToScalaREPL"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sendToScalaREPL",
                "title": "Send To Scala REPL"
            }
        ],
        "keybindings": [
            {
                "command": "extension.sendToScalaREPL",
                "key": "alt+enter",
                "when": "editorFocus && !findWidgetVisible && editorLangId == 'scala'"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
